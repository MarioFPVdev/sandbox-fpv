
auto lo
iface lo inet loopback

auto eth0
iface eth0 inet dhcp
    hwaddress ether $(fw_printenv -n ethaddr || echo 00:24:B8:FF:FF:FF)

auto eth0:1
iface eth0:1 inet static
    address $(fw_printenv -n ipaddr || echo 192.168.1.10)
    netmask 255.255.255.0

#LTE modem
manual eth1
iface eth1 inet dhcp
    pre-up sleep 4
    pre-up usb_modeswitch -v 0x12d1 -p 0x1f01 -J
    pre-up modprobe usbserial vendor=0x12d1 product=0x14dc
    pre-up modprobe rndis_host
    pre-up sleep 4

manual wlan0
iface wlan0 inet dhcp

manual wlan1
iface wlan1 inet dhcp
    pre-up modprobe rtl8xxxu.ko
    pre-up sleep 3
    pre-up wpa_passphrase "wifi-ssid" "password" >/tmp/wpa_supplicant.conf
    pre-up sed -i '2i \\tscan_ssid=1' /tmp/wpa_supplicant.conf
    pre-up sleep 3
    pre-up wpa_supplicant -B -D nl80211 -i wlan1 -c/tmp/wpa_supplicant.conf
    post-down killall -q wpa_supplicant

#USB Tethering
auto usb0
iface usb0 inet dhcp
    pre-up modprobe rndis_host
    pre-up sleep 4

#source-dir /etc/network/interfaces.d
